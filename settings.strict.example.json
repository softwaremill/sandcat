{
  "env": {
    "GIT_USER_NAME": "Your Name",
    "GIT_USER_EMAIL": "you@example.com"
  },
  "secrets": {
    "ANTHROPIC_API_KEY": {
      "value": "sk-ant-your-real-key-here",
      "hosts": [
        "api.anthropic.com"
      ]
    },
    "GITHUB_TOKEN": {
      "value": "ghp_your-real-token-here",
      "hosts": [
        "github.com",
        "api.github.com",
        "*.githubusercontent.com"
      ]
    }
  },
  "network": [
    {"action": "allow", "host": "github.com"},
    {"action": "allow", "host": "*.github.com"},
    {"action": "allow", "host": "*.githubusercontent.com"},
    {"action": "allow", "host": "*.anthropic.com"},
    {"action": "allow", "host": "*.claude.ai"},
    {"action": "allow", "host": "*.claude.com"},
    {"action": "allow", "host": "update.code.visualstudio.com"},
    {"action": "allow", "host": "marketplace.visualstudio.com"},
    {"action": "allow", "host": "*.vsassets.io"},
    {"action": "allow", "host": "main.vscode-cdn.net"},
    {"action": "allow", "host": "registry.npmjs.org"},
    {"action": "allow", "host": "pypi.org"},
    {"action": "allow", "host": "files.pythonhosted.org"}
  ]
}
